@model EventsPlus.ViewModels.EventInformation

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                EventName
            </th>
            <th>
                EventSchedule
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventSchedule.EventScheduleID)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.EventID">Select</a> |
                    <a asp-action="Edit" asp-route-id="@item.EventID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EventID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EventID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.EventSchedules != null)
{
<h1>Selected Event Schedule</h1>

<p>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Time
            </th>
            <th>
                Locatiokn
            </th>
            <th>
                Venu
            </th>
            <th>
                Event
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EventSchedules)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.EventCompanyID)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EventScheduleID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EventScheduleID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EventScheduleID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
